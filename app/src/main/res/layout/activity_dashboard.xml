<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".controller.DashboardController">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="790dp"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="2"

            android:layout_margin="6dp"


            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">


            <androidx.cardview.widget.CardView

                android:layout_width="150dp"
                android:layout_height="170dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#FFFFFF"

                android:elevation="20dp"
                android:layout_margin="10dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/open_ordinarydrink"
                        android:background="@drawable/ordinary_drink"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginTop="18dp"

                        />

                    <TextView
                        android:id="@+id/ordinary_drink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ordinary Drink"
                        android:textSize="18sp"
                        android:textColor="#F64A3E"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="12dp"
                app:cardElevation="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:background="@drawable/non_alcoholic"
                        android:id="@+id/open_nonalcoholic"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginTop="18dp"

                        />

                    <TextView
                        android:id="@+id/open_live_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Non - Alcoholic"
                        android:textColor="#F64A3E"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </GridLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="170dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#FFFFFF"
            android:elevation="35dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/open_cocktail"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:background="@drawable/cocktail"
                    android:layout_marginTop="18dp" />

                <TextView
                    android:id="@+id/standing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:text="Cocktail"
                    android:textColor="#F64A3E"
                    android:textStyle="bold"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>



</ScrollView>